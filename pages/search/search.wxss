/* pages/search/search.wxss */
.search {
  border-bottom: 1px solid #eee;
  box-shadow: 0px 3px 3px #eee;
}
.search-history {
  padding: 10px;
}
.search-history .title {
  font-weight: 700;
}
.history-list {
  margin-top: 10px;
  margin-bottom: 10px;
}
.history-list .item {
  position: relative;
  height: 40px;
  border-bottom: 1px solid #eee;
}
.history-list .item .name {
  line-height: 40px;
  margin-left: 34px;
  color: #333;
  font-size: 16px;
}
.history-list .item .waiting-icon {
  position: absolute;
  top: 50%;
  left: 4px;
  transform: translate(0, -50%);
}
.history-list .item .clear-icon {
  position: absolute;
  top: 50%;
  right: 10px;
  transform: translate(0, -50%);
}
.search-history .clear-history {
  font-size: 16px;
}
.no-result {
  padding-top: 10px;
  font-size: 14px;
  text-align: center;
}