/**index.wxss**/
.container {
  background-color: #eee;
}
.update-time {
  font-size: 12px;
  text-align: center;
  color: #999;
  background: #fff;
}
.menu-tab {
  margin-top: 30rpx;
  padding: 10px 0;
  width: 100%;  
  font-size: 14px;
  text-align: center;
  border: 1px solid #eee;  
  background-color: #fff;
}
.feedback {
  /* position: fixed;
  bottom: 0;  */
  width: 100%;
  padding: 6px 0;
  background-color: #eee;  
}
.feedback .feedback-btn {
   width: 120px;
   padding: 0 30px; 
   font-size: 14px; 
}
.modal {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .7);
  z-index: 9;
}
.modal .form {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 30px;
  font-size: 16px;
  background: #fff;
  border-radius: 5px;
}
.modal .form .suggest, .modal .form .contact {
  margin-bottom: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}
.modal .form .suggest {
  padding: 10px;
  height: 100px;
}
.modal .form .contact {
  padding: 5px 10px;
}
.feedback-btn {
  position: fixed;
  right: 10px;
  bottom: 10px;
  width: 40px;
  height: 40px;
  line-height: 40px;
  display: block;
  margin: 0 auto;
  border-radius: 50%;
  text-align: center;
  font-size: 12px;
  padding: 0;
}
