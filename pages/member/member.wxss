/* pages/member/member.wxss */
.header {
  padding: 20px 0;
  text-align: center;
  background-color: #fce13d;
}
.header .avatar {
  margin: 0 auto;
  overflow: hidden;
  display: block;
  width: 80px;
  height: 80px;
  border: 3px solid #fff;
  border-radius: 50%;
}
.header .nickname {
  display: block;
  margin-top: 10px;
}
.content {
  margin-top: 10px;
}
.content .title {
  display: block;
  padding: 10px 20px;
  margin-bottom: 5px;
  font-size: 16px;
  border: 1px solid #eee;
}
.auth {
  margin-top: 20px;
}
.auth .tips {
  display: block;
  margin-top: 10px;
  text-align: center;
  font-size: 14px;
}